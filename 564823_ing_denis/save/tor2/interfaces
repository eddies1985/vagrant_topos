auto peerlink
iface peerlink
  bond-slaves swp53 swp54
  mtu 9216

auto peerlink.4094
iface peerlink.4094
  address 169.254.1.2/30
  clagd-peer-ip 169.254.1.1
  clagd-backup-ip 192.168.200.5 vrf mgmt
  clagd-sys-mac 44:38:39:FF:01:02
 # clagd-args --initDelay 180
